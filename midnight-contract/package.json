{
  "name": "midnight-contract",
  "version": "1.0.0",
  "private": true,
  "description": "Compact smart contracts for Bunty ZKP platform on Midnight Network",
  "scripts": {
    "compile": "ts-node scripts/compile.ts",
    "compile:optimize": "OPTIMIZE=true ts-node scripts/compile.ts",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:testnet": "MIDNIGHT_NETWORK=testnet ts-node scripts/deploy.ts",
    "deploy:mainnet": "MIDNIGHT_NETWORK=mainnet ts-node scripts/deploy.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.ts",
      "!scripts/**/*.d.ts"
    ]
  }
}
